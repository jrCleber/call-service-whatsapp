{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "incremental": true,
    "noImplicitAny": false,
  },
  "exclude": ["node_modules", "./test", "./dist", "./prisma"]
}